<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/countdownWidgetLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_bg"
    android:orientation="vertical"

    android:padding="@dimen/widgetPadding"
    android:gravity="center">
    

    <TextView
        android:id="@+id/appwidget_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="@string/appwidget_text"
        android:gravity="center"
        android:text="@string/event_name"
        android:textColor="@color/smokeWhite"
        android:textSize="@dimen/textSize10"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/appwidget_date"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="2"
        android:contentDescription="@string/appwidget_text"
        android:gravity="center"
        android:text="@string/countdown_example"
        android:textColor="@color/widgetDarkColor"
        android:textSize="@dimen/textSize12"
        android:background="@drawable/widget_title_bg"

        />


</LinearLayout>